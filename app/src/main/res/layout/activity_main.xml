<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSpeechToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech to Text"
        android:onClick="startSpeechToText" />

    <EditText
        android:id="@+id/etSpeechToText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:inputType="text"
        android:hint="@string/edit_text_1" />

    <Button
        android:id="@+id/btnTextToSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text to Speech"
        android:onClick="startTextToSpeech" />

    <EditText
        android:id="@+id/etTextToSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:inputType="text"
        android:hint="@string/edit_text_2" />

</LinearLayout>
